<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/soft_yellow</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Custom TextView Styles -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/soft_yellow</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomButtonPink" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/soft_pink</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
